<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Configure the node.js handler -->
      <add name="nodejs" path="*" verb="*" modules="IsapiModule" scriptProcessor="D:\home\site\wwwroot\node_modules\pm2\bin\pm2.cmd" resourceType="Unspecified" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Default Rule: All requests should be forwarded to the Node.js server -->
        <rule name="NodeJs" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="index.js" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
